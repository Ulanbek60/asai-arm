<odoo>
  <!-- Причины брака -->
  <record id="view_arm_scrap_reason_list" model="ir.ui.view">
    <field name="name">arm.scrap.reason.list</field>
    <field name="model">arm.scrap.reason</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="active"/>
      </list>
    </field>
  </record>

  <record id="view_arm_scrap_reason_form" model="ir.ui.view">
    <field name="name">arm.scrap.reason.form</field>
    <field name="model">arm.scrap.reason</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="active"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Причины невозможности -->
  <record id="view_arm_block_reason_list" model="ir.ui.view">
    <field name="name">arm.block.reason.list</field>
    <field name="model">arm.block.reason</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="active"/>
      </list>
    </field>
  </record>

  <record id="view_arm_block_reason_form" model="ir.ui.view">
    <field name="name">arm.block.reason.form</field>
    <field name="model">arm.block.reason</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="active"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Рабочие зоны -->
  <record id="view_arm_workcenter_list" model="ir.ui.view">
    <field name="name">arm.workcenter.list</field>
    <field name="model">arm.workcenter</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="code"/>
        <field name="is_active"/>
      </list>
    </field>
  </record>

  <record id="view_arm_workcenter_form" model="ir.ui.view">
    <field name="name">arm.workcenter.form</field>
    <field name="model">arm.workcenter</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="name"/>
            <field name="code"/>
            <field name="is_active"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Обслуживание -->
  <record id="view_arm_maintenance_list" model="ir.ui.view">
    <field name="name">arm.maintenance.list</field>
    <field name="model">arm.maintenance</field>
    <field name="arch" type="xml">
      <list>
        <field name="date"/>
        <field name="workcenter_id"/>
        <field name="type"/>
        <field name="user_id"/>
        <field name="notes"/>
      </list>
    </field>
  </record>

  <record id="view_arm_maintenance_form" model="ir.ui.view">
    <field name="name">arm.maintenance.form</field>
    <field name="model">arm.maintenance</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="date"/>
            <field name="workcenter_id"/>
            <field name="type"/>
            <field name="user_id"/>
          </group>
          <group>
            <field name="notes"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Actions для справочников и обслуживания -->
  <record id="action_arm_scrap_reason" model="ir.actions.act_window">
    <field name="name">Причины брака</field>
    <field name="res_model">arm.scrap.reason</field>
    <field name="view_mode">list,form</field>
  </record>

  <record id="action_arm_block_reason" model="ir.actions.act_window">
    <field name="name">Причины невозможности</field>
    <field name="res_model">arm.block.reason</field>
    <field name="view_mode">list,form</field>
  </record>

  <record id="action_arm_workcenter" model="ir.actions.act_window">
    <field name="name">Рабочие зоны</field>
    <field name="res_model">arm.workcenter</field>
    <field name="view_mode">list,form</field>
  </record>

  <record id="action_arm_maintenance" model="ir.actions.act_window">
    <field name="name">Обслуживание</field>
    <field name="res_model">arm.maintenance</field>
    <field name="view_mode">list,form</field>
  </record>

</odoo>
